<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Easy Presentation"
        android:id="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhite"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/but_bt"
        android:id="@+id/buttonBt"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="92dp"
        android:onClick="butBtHandle" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/but_wifi"
        android:id="@+id/buttonWifi"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/buttonBt"
        android:layout_alignLeft="@+id/buttonBt"
        android:layout_alignStart="@+id/buttonBt"
        android:onClick="butWifiHandle" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/but_browse"
        android:id="@+id/buttonBrowse"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/buttonWifi"
        android:layout_toEndOf="@+id/buttonWifi"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_marginBottom="129dp"
        android:onClick="butBrowseHandle" />
</RelativeLayout>
